<?xml version="1.0" encoding="UTF-8"?>
<FrameLayout android:layout_width="fill_parent"
	android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android">
	<FrameLayout android:id="@+id/mvgForAdmobRequest"
		android:layout_width="fill_parent" android:layout_height="52.0dip" />
	<LinearLayout android:gravity="top|center"
		android:orientation="vertical" android:background="@android:color/background_dark"
		android:layout_width="fill_parent" android:layout_height="fill_parent">
	<RelativeLayout android:layout_width="fill_parent"
		android:layout_height="0.0dip" android:layout_weight="1.0">
		<ListView android:id="@+id/mlvList" android:layout_width="fill_parent"
			android:layout_height="fill_parent" android:cacheColorHint="#00000000"
			android:fastScrollEnabled="true" />
		<org.falconia.mangaproxy.helper.ProgressView android:id="@+id/mvgProgress"
			android:layout_width="fill_parent" android:layout_height="fill_parent" />
	</RelativeLayout>
		<LinearLayout android:orientation="horizontal"
			android:layout_width="fill_parent" android:layout_height="wrap_content">
			<ImageButton android:background="@drawable/btn_square"
				android:layout_width="fill_parent" android:layout_height="48.0dip"
				android:src="@drawable/browse" android:layout_weight="1.0"
				android:id="@+id/mbtnBrowse" />
			<ImageButton android:id="@+id/mbtnUpdate"
				android:background="@drawable/btn_square" android:layout_width="fill_parent"
				android:layout_height="48.0dip" android:src="@drawable/reload_update"
				android:layout_weight="1.0" />
			<ImageButton android:id="@+id/mbtnContinue"
				android:background="@drawable/btn_square" android:layout_width="fill_parent"
				android:layout_height="48.0dip" android:src="@drawable/continue_read"
				android:layout_weight="1.0" />
		</LinearLayout>
	</LinearLayout>
</FrameLayout>