<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent" android:layout_height="match_parent">
	<TextView android:layout_height="wrap_content"
		android:layout_width="wrap_content" android:id="@+id/mtvMessage"
		android:text="@string/ui_no_pages" android:layout_centerInParent="true" />
	<ScrollView android:layout_width="match_parent"
		android:layout_height="match_parent">
		<LinearLayout android:orientation="horizontal"
			android:layout_height="wrap_content" android:layout_width="match_parent"
			android:gravity="right">
			<ImageView android:scaleType="matrix"
				android:layout_height="wrap_content" android:src="@drawable/icon"
				android:id="@+id/mivPage" android:layout_width="wrap_content" />
		</LinearLayout>
	</ScrollView>
	<ScrollView android:id="@+id/msvScroller"
		android:layout_width="match_parent"
		android:clickable="false" android:background="#60000000" android:layout_height="110.0dip">
		<TextView android:text="Debug:" android:id="@+id/mtvDebug"
			android:layout_width="match_parent" android:layout_height="wrap_content"
			android:textAppearance="?android:textAppearanceSmall"
			android:textColor="@color/bright_foreground_dark" android:textSize="11.0dip"/>
	</ScrollView>
</RelativeLayout>